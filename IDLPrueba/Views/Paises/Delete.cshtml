@model IDLPrueba.Models.Pais
@{
    ViewData["Title"] = "Eliminar Pais";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row text-center">
        <div class="col-sm-12">
            <h3>Eliminar Pais</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <form method="post" asp-action="DeletePa">
                <input hidden asp-for="PaisId" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PaisNombre" class="control-label"></label>
                    <input asp-for="PaisNombre" class="form-control" disabled />
                    <span asp-validation-for="PaisNombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PaisDescripcion" class="control-label"></label>
                    <input asp-for="PaisDescripcion" class="form-control" disabled />
                    <span asp-validation-for="PaisDescripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Activo" class="control-label"></label>
                    <input asp-for="Activo" class="form-control" disabled />
                    <span asp-validation-for="Activo" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Eliminar Pais" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial" />}
}
