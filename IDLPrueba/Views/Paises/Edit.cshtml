@model IDLPrueba.Models.Pais
@{
    ViewData["Title"] = "Editar Pais";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12 text-center">
            <h3>Editar Pais</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <form method="post" asp-action="Edit">
                <input type="hidden" asp-for="PaisId" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PaisNombre" class="control-label"></label>
                    <input asp-for="PaisNombre" class="form-control" />
                    <span asp-validation-for="PaisNombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PaisDescripcion" class="control-label"></label>
                    <input asp-for="PaisDescripcion" class="form-control" />
                    <span asp-validation-for="PaisDescripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Activo" class="control-label"></label>
                    <select asp-for="Activo" class="form-control" aria-label="Default select example">
                        <option value="1">Activo</option>
                        <option value="0">Inactivo</option>
                    </select>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Editar Pais" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial" />}
}
